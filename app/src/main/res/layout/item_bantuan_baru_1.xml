<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bantuan_1_judul"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bantuan_1_1"
            android:layout_marginTop="@dimen/margin_bantuan_10"
            android:layout_marginBottom="@dimen/margin_bantuan_5" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bantuan_2_1"
            android:id="@+id/imageView_bantuan_1_1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bantuan_1_2"
            android:layout_marginBottom="@dimen/margin_bantuan_5"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bantuan_2_2"
            android:id="@+id/imageView_bantuan_1_2"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bantuan_1_3"
            android:layout_marginBottom="@dimen/margin_bantuan_5"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bantuan_2_3"
            android:id="@+id/imageView_bantuan_1_3"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bantuan_1_4"
            android:layout_marginBottom="@dimen/margin_bantuan_5"
            android:layout_marginTop="@dimen/margin_bantuan_10" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bantuan_2_4"
            android:id="@+id/imageView_bantuan_1_4"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />
    </LinearLayout>
</ScrollView>