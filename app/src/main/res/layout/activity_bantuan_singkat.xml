<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:id="@+id/bantuan_singkat_view_pager">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <Button
            android:text="@string/sebelumnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sebelumnya"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />

        <Button
            android:text="@string/selanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_selanjutnya"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_bantuan_10"
            android:layout_marginTop="@dimen/margin_bantuan_5" />
    </LinearLayout>
</LinearLayout>