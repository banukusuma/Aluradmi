<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/bantuan_singkat_framelayout">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <Button
            android:text="@string/sebelumnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sebelumnya"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:paddingLeft="@dimen/margin_bantuan_10"
            android:paddingBottom="@dimen/margin_bantuan_5"
            android:paddingTop="@dimen/margin_bantuan_5" />

        <Button
            android:text="@string/selanjutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_selanjutnya"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:paddingBottom="@dimen/margin_bantuan_5"
            android:paddingTop="@dimen/margin_bantuan_5"
            android:paddingRight="@dimen/margin_bantuan_10" />
    </LinearLayout>
</LinearLayout>